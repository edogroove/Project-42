{
    "tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc compila il file attivo",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"-Werror",
				"-D BUFFER_SIZE=5",
				"${file}",
				"get_next_line_utils.c",
				"get_next_line.h",
//				"libftprintf.a",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Attivit√† generata dal debugger."
		}
	],
    "version": "2.0.0"
}